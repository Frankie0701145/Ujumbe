<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include ./partials/head.ejs %>
  <body>
    <%- include ./partials/navBar %>
    <div class="container">
        <div class="row mt-4 pt-5">
            <div class="col-6 mx-auto border border-white shadow-lg p-4 bg-white rounded mt-4">
                <h3 class="text-center">Password Reset</h3>

                <%- include ./partials/flashMessage.ejs%>
                <form action="/resetPassword" method="post">
                    <%- include ./partials/csrfToken.ejs%>
                    <input name="email" type="hidden" value=<%=email%>>
                    <div class="form-group">
                      <label for="password">Password</label>
                      <input name="password" type="password" class="form-control" id="password" minlength="8" i aria-describedby="passwordHelp" required=true>
                    </div>
                    <div class="form-group">
                      <label for="passwordConfirmation">Password Confirmation</label>
                      <input name="passwordConfirmation" type="password" class="form-control" minlength="8" id="passwordConfirmation" aria-describedby="passwordHelp" required=true>
                    </div>
                    <div class="form-group">
                        <button type="submit" name="button" class="btn btn-info btn-block mt-2">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
  </body>
</html>
