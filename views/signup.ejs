  <!DOCTYPE html>
  <html lang="en" dir="ltr">

      <%- include ./partials/head %>

      <body>
        <%- include ./partials/navBar %>

        <div class="container">

            <div class="row mt-4 pt-5">

              <div class="col-8 mx-auto border border-white shadow-lg p-4 bg-white rounded mt-4">
                  <h3 class="text-center">Sign Up</h3>
                    <%if( errors ){%>
                        <div class="row alert alert-danger" role="alert">
                          <ul>
                            <% errors.forEach(function(err,index){%>
                              <li><%= err.message %></li>
                            <% }); %>
                          </ul>
                        </div>
                    <%}%>
                  <form action="/signup" method="post">
                        <%- include ./partials/csrfToken.ejs%>
                        <!-- Name -->
                        <div class="row">
                    			<div class="col-xs-6 col-sm-6 col-md-6">
                    				<div class="form-group">
                              <label for="firstName">First Name.</label>
                    					<input id="firstName" type="text" name="firstName" placeholder="First Name" class="form-control input-sm" required= true>
                    				</div>
                    			</div>
                    			<div class="col-xs-6 col-sm-6 col-md-6">
                    				<div class="form-group">
                              <label for="lastName">Last Name.</label>
                    					<input id="lastName" type="text" name="lastName" placeholder="Last Name" class="form-control input-sm" required= true>
                    				</div>
                    			</div>
                    		</div>
                        <!-- Contact -->
                        <div class="row">
                          <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                              <label for="email">Email address</label>
                              <input id="email" name="email" type="email" class="form-control input-sm" placeholder="Email Address" required= true aria-describedby="emailHelp">
                              <small id="emailHelp" class="form-text text-muted">We'll never share your email without our permission.</small>
                            </div>
                          </div>
                          <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                              <label for="tel">Phone No.</label>
                              <input id='tel' name="phoneNumber" type="tel" class="form-control input-sm" placeholder="0xxxxxxxxx" required= true aria-describedby="telHelp">
                              <small id="telHelp" class="form-text text-muted">We'll never share your telephone without our permission.</small>
                            </div>
                          </div>
                        </div>
                        <!-- password -->
                        <div class="row">
                      			<div class="col-xs-6 col-sm-6 col-md-6">
                      				<div class="form-group">
                                <label for="password">Password</label>
                      					<input type="password" name="password" id="password" minlength="8" class="form-control input-sm" required=true>
                      				</div>
                      			</div>
                      			<div class="col-xs-6 col-sm-6 col-md-6">
                      				<div class="form-group">
                                <label for="passwordConfirmation">Password Confirmation</label>
                      					<input type="password" name="passwordConfirmation" id="passwordConfirmation" class="form-control input-sm" required=true minlength="8" i>
                      				</div>
                      			</div>
                    		</div>
                        <button class="btn btn-primary btn-block" type="submit">Submit</button>
                  </form>
              </div>
            </div>
        </div>
      </body>
  </html>
